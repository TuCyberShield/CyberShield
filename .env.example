# Environment Variables Template
# Copy this file to .env and fill in your values

# Database (for Vercel, leave as is - SQLite will be created automatically)
DATABASE_URL="file:./dev.db"

# JWT Secret (IMPORTANTE: Cambia esto en producción a un valor único y seguro)
# Genera uno seguro aquí: https://generate-secret.vercel.app/32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"

# App URL (Cambia esto a tu URL de Vercel en producción)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# SendGrid Email Service (Opcional)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@cybershield.com

# AbuseIPDB Threat Intelligence (Opcional)
# Get your free API key at: https://www.abuseipdb.com/register
# Free tier: 1,000 checks/day (3,000 with email verification)
ABUSEIPDB_API_KEY=your_api_key_here
ENABLE_THREAT_INTELLIGENCE=true

# Push Notifications VAPID Keys (Opcional)
# Genera tus claves aquí: https://vapidkeys.com/
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
